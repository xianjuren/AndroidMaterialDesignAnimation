<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.myapplication.activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                style="@style/main_item_card_view"
                android:onClick="floatingActionButton"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <TextView
                    style="@style/main_item_text"
                    android:text="FloatingActionButtonAndSnackbar"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/main_item_card_view"
                android:onClick="navigation"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <TextView
                    style="@style/main_item_text"
                    android:text="NavigationView"/>
            </android.support.v7.widget.CardView>





            <android.support.v7.widget.CardView
                style="@style/main_item_card_view"
                android:onClick="toolbar"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <TextView
                    style="@style/main_item_text"
                    android:text="Toolbar"/>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                style="@style/main_item_card_view"
                android:onClick="collapsingToolbarLayout"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <TextView
                    style="@style/main_item_text"
                    android:text="CollapsingToolbarLayout"/>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                style="@style/main_item_card_view"
                android:onClick="coordinatorLayout"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <TextView
                    style="@style/main_item_text"
                    android:text="CoordinatorLayout"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/main_item_card_view"
                android:onClick="appBarLayout"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <TextView
                    style="@style/main_item_text"
                    android:text="仿稀土综合应用"
                    android:id="@+id/textView2"/>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
